{
  "name": "sizer",
  "displayName": "Sizer",
  "description": "Show size of minified TypeScript",
  "version": "0.0.1",
  "publisher": "orokanasaru",
  "license": "MIT",
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./build/sizer.js",
  "contributes": {
    "commands": [
      {
        "command": "sizer.changePreset",
        "title": "Sizer: Change Preset"
      },
      {
        "command": "sizer.helloWorld",
        "title": "Sizer: Hello World"
      }
    ],
    "configuration": {
      "properties": {
        "sizer.preset": {
          "description": "The preset to use",
          "type": "string",
          "default": "default"
        },
        "sizer.presets": {
          "description": "Enables rapid switching between presets",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "description": "The name of the preset",
                "type": "string"
              },
              "typeScript": {
                "description": "Options for the TypeScript compiler",
                "type": "object",
                "properties": {
                  "downlevelIteration": {
                    "description": "Provide full support for iterables in for..of, spread and destructuring when targeting ES5 or ES3.",
                    "type": "boolean",
                    "default": false
                  },
                  "emitDecoratorMetadata": {
                    "description": "Emit design-type metadata for decorated declarations in source. See issue #2577 for details.",
                    "type": "boolean",
                    "default": false
                  },
                  "esModuleInterop": {
                    "description": "Emit __importStar and __importDefault helpers for runtime babel ecosystem compatibility and enable --allowSyntheticDefaultImports for typesystem compatibility.",
                    "type": "boolean",
                    "default": false
                  },
                  "experimentalDecorators": {
                    "description": "Enables experimental support for ES decorators.",
                    "type": "boolean",
                    "default": false
                  },
                  "importHelpers": {
                    "description": "Import emit helpers (e.g. __extends, __rest, etc..) from tslib",
                    "type": "boolean",
                    "default": false
                  },
                  "jsx": {
                    "description": "Support JSX in .tsx files: 'react', 'preserve', 'react-native'. See JSX.",
                    "type": "string",
                    "enum": [
                      "preserve",
                      "react",
                      "react-native"
                    ],
                    "default": "preserve"
                  },
                  "jsxFactory": {
                    "description": "Specify the JSX factory function to use when targeting react JSX emit, e.g. React.createElement or h.",
                    "type": "string",
                    "default": "React.createElement"
                  },
                  "module": {
                    "description": "Specify module code generation: 'None', 'CommonJS', 'AMD', 'System', 'UMD', 'ES6', 'ES2015' or 'ESNext'. Only 'AMD' and 'System' can be used in conjunction with --outFile. 'ES6' and 'ES2015' values may be used when targeting 'ES5' or lower.",
                    "type": "string",
                    "enum": [
                      "None",
                      "CommonJS",
                      "AMD",
                      "System",
                      "UMD",
                      "ES6",
                      "ES2015",
                      "ESNext"
                    ],
                    "default": "CommonJS"
                  },
                  "preserveConstEnums": {
                    "description": "Do not erase const enum declarations in generated code. See const enums documentation for more details.",
                    "type": "boolean",
                    "default": false
                  },
                  "removeComments": {
                    "description": "Remove all comments except copy-right header comments beginning with /*!",
                    "type": "boolean",
                    "default": false
                  },
                  "target": {
                    "description": "Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES6'/'ES2015', 'ES2016', 'ES2017' or 'ESNext'. Note: 'ESNext' targets latest supported ES proposed features.",
                    "type": "string",
                    "enum": [
                      "ES3",
                      "ES5",
                      "ES6",
                      "ES2015",
                      "ES2016",
                      "ES2017",
                      "ES2018",
                      "ES2019",
                      "ES2020",
                      "ESNext"
                    ],
                    "default": "ES3"
                  }
                }
              }
            }
          },
          "default": [
            {
              "name": "default"
            },
            {
              "name": "ESNext",
              "typeScript": {
                "module": "ESNext",
                "target": "ESNext"
              }
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "webpack": "cross-env TS_NODE_COMPILER_OPTIONS={\\\"module\\\":\\\"commonjs\\\"} webpack --config webpack.config.ts --progress",
    "webpack:watch": "cross-env TS_NODE_COMPILER_OPTIONS={\\\"module\\\":\\\"commonjs\\\"} webpack --config webpack.config.ts --watch --mode=development"
  },
  "dependencies": {
    "typescript": "^3.3.1"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/terser-webpack-plugin": "^1.2.1",
    "@types/vscode": "^1.36.0",
    "@types/webpack": "^4.32.1",
    "@types/webpack-bundle-analyzer": "^2.13.2",
    "@types/webpack-merge": "^4.1.5",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^5.2.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "source-map-loader": "^0.2.4",
    "source-map-support": "^0.5.12",
    "terser-webpack-plugin": "1.3.0",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-react": "^4.0.0",
    "vscode-test": "^1.0.2",
    "webpack": "^4.38.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.2.1"
  },
  "peerDependencies": {
    "vscode": "^1.1.35"
  }
}
